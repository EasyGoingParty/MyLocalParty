{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-db": "pg_ctl start -D /path_to_your_data_directory",
    "stop-db": "pg_ctl stop -D /path_to_your_data_directory",
    "server": "node server.js",
    "dev": "nodemon server.js",
    "start-server": "npm run start-db && npm run server",
    "start-dev": "npm run start-db && npm run dev",
    "migrate:up": "node-pg-migrate up -e dev --config ./migrate-config.js",
    "migrate:down": "node-pg-migrate down -e dev --config ./migrate-config.js"
  },
